 '(font-lock-string-face ((t (:foreground "#ffffff"))))
 '(font-lock-type-face ((t (:foreground "#D8DEE9" :inherit (modus-themes-bold)))))
 '(font-lock-variable-name-face ((t (:foreground "#D8DEE9"))))
 '(font-lock-variable-use-face ((t (:inherit (font-lock-variable-name-face)))))
 '(font-lock-warning-face ((t (:foreground "#EBCB8B" :inherit (modus-themes-bold)))))
 '(button ((t (:underline (:color "#4C566A" :style line :position nil) :foreground "#81A1C1"))))
 '(link ((t (:inherit (button)))))
 '(link-visited ((t (:underline (:color "#4C566A" :style line :position nil) :foreground "#B48EAD"))))
 '(fringe ((t (:foreground "#D8DEE9"))))
 '(header-line ((t (:background "#3B4352" :inherit (modus-themes-ui-variable-pitch)))))
 '(tooltip ((t (:foreground "#D8DEE9" :background "#4C566A"))))
 '(mode-line ((t (:box (:line-width (1 . 1) :color "#4C566A" :style nil) :foreground "#E5E9F0" :background "#4C566A" :inherit (modus-themes-ui-variable-pitch)))))
 '(mode-line-buffer-id ((t (:inherit (bold)))))
 '(mode-line-emphasis ((t (:foreground "#9fefff" :inherit (bold)))))
 '(mode-line-highlight ((t (:box (:line-width (1 . 1) :color "#D8DEE9" :style nil) :foreground "#D8DEE9" :background "#4C566A"))))
 '(mode-line-inactive ((t (:box (:line-width (1 . 1) :color "#81A1C1" :style nil) :foreground "#81A1C1" :background "#2E3440" :inherit (modus-themes-ui-variable-pitch)))))
 '(isearch ((t (:inherit (modus-themes-search-current)))))
 '(isearch-fail ((t (:inherit (modus-themes-prominent-error)))))
 '(lazy-highlight ((t (:inherit (modus-themes-search-lazy)))))
 '(match ((t (:foreground "#D8DEE9" :background "#552f5f"))))
 '(next-error ((t (:extend t :inherit (modus-themes-prominent-error)))))
 '(query-replace ((t (:inherit (modus-themes-search-replace))))))

(provide-theme 'polar-bear)

