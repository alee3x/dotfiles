(deftheme polar-bear
  "Simple almost monochrome theme based on Nord.")

(custom-theme-set-faces
 'polar-bear
 '(cursor ((t (:background "#FFFFFF"))))
 '(escape-glyph ((t (:foreground "#BF616A"))))
 '(homoglyph ((t (:foreground "#EBCB8B"))))
